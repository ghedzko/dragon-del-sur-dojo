---
interface Props {
  address: string;
  zoom?: number;
  width?: string;
  height?: string;
}

const { 
  address = "Av. Principal 123, Ciudad", 
  zoom = 15,
  width = "100%",
  height = "400px"
} = Astro.props;

const encodedAddress = encodeURIComponent(address);
---

<div class="map-container" style={`width: ${width}; height: ${height};`}>
  <iframe
    width="100%"
    height="100%"
    style="border:0"
    loading="lazy"
    allowfullscreen
    referrerpolicy="no-referrer-when-downgrade"
    src={`https://www.google.com/maps/embed/v1/place?key=YOUR_GOOGLE_MAPS_API_KEY&q=${encodedAddress}&zoom=${zoom}`}
  >
  </iframe>
</div>

<style>
  .map-container {
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }
</style>